{{#if hasOverlay}}
  {{#liquid-wormhole stack='modal-overlay' class="liquid-dialog-container"}}
    {{modal-dialog-overlay
        classNameBindings='overlayClassNamesString translucentOverlay:translucent overlayClass'
        action=onClickOverlay
    }}
  {{/liquid-wormhole}}
{{/if}}
{{#liquid-tether
    class=(concat containerClassNamesString ' ' attachmentClass ' ' containerClass)
    stack='modal-dialog'
    target=tetherTarget
    attachment=attachment
    targetAttachment=targetAttachment
    targetModifier=targetModifier
    classPrefix=tetherClassPrefix
    offset=offset
    targetOffset=targetOffset
    constraints=constraints
}}
  {{yield}}
{{/liquid-tether}}
