  <button {{action 'toggleForm'}}>Do It</button>
  {{code-snippet name='form-focus-modal-dialog.hbs'}}
  <div id='form-scrolling'>
    {{#if isShowingForm}}
    {{!-- BEGIN-SNIPPET form-focus-modal-dialog --}}
      {{#modal-dialog
          focusSelector='#email'
          close='toggleForm'
      }}
        <h1>Focus in a form </h1>
        <p>
          <label>Email</label>
          {{input id='email' value='' placeholder='email'}}
        </p>
        <p>
          <label>Name</label>
          {{input id='name' value='' placeholder='name'}}
        </p>
        <button {{action 'toggleForm'}}>Close</button>
