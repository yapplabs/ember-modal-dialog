<div class="example">
  <h2>Element Center</h2>

  <span id="elementCenter">
    <button
      onclick={{action
        (mut this.isShowingElementCenterModal)
        true
      }}
      type="button"
    >
      Element Center
    </button>
  </span>

  <CodeBlock
    @code={{get
      this.codeSnippets
      "element-centered-modal-dialog-tethered-hbs"
    }}
    @language="hbs"
  />

  {{#if this.isShowingElementCenterModal}}
    <ModalDialog
      @translucentOverlay={{true}}
      @tetherTarget="#elementCenter"
      @onClose={{action
        (mut this.isShowingElementCenterModal)
        false
      }}
    >
      <p>Centered on element.</p>
    </ModalDialog>
  {{/if}}
</div>